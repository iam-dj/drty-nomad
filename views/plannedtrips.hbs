<!-- Add a button to show/hide the form -->
<div class="container">
    <div class="row mb-1">
        <div class="col-md-12">
            <div id="drty-card-header" class="card display-flex flex-row">
                <div class="d-flex align-items-center" id="drty-card-header-textbox">
                    <div class="row ">
                        <div class="image text-center col-sm-4">
                            <img src="{{user.profile_pic}}" class="card-img my-prof img-fluid" alt="avatar"
                                 style="height: 300px; object-fit: cover;">
                        </div>
                        <div class="col-sm-8 flex-column mt-2">
                            <div class="bg-light bg-opacity-75 rounded p-2" style="flex-grow: 1;">
                                <h4 class="">{{user.first_name}} {{user.last_name}}</h4>
                                <div class="" style="flex-grow: 1;">
                                    <div>
                                        <span>From: {{user.user_home}}</span>
                                    </div>
                                    <div>
                                        <span>Age: {{user.user_age}}</span>
                                    </div>
                                    <div>
                                        <span>About me: {{user.about_me}}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 display-flex flex-row justify-center">
                                <div>
                                    <img src="/images/profilebtn.png" alt="Share Trip" class="mt-3 new-stamp-btn"
                                         id="profile-page-btn">
                                </div>
                                <div>
                                    <img src="/images/stampAddTrip.png" alt="Add Trip" class="mt-3 new-stamp-btn"
                                         id="new-future-trip-btn">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="new-future-trip-form-container" style="display: none;">
    <div class="container">

  <form class="form new-future-trip-form bg-light bg-opacity-75 rounded pl-4 pb-2">
    <img src="" hidden="hidden" id="ac-img">
    <div class="row">
      <div class="col-md-6 border-end">
        <label for="future-trip-name" style="color:rgb(73, 73, 73)">Dream Destination:</label>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <input class="typeahead form-control form-input bg-light" type="text" id="future-trip-name"
                name="future-trip-name" placeholder="What's your dream trip?">
            </div>
          </div>
          <div class="row mt-2">
            <div class="col">
              <label for="add-future-trip-photo-btn" class="form-group" style="color:rgb(73, 73, 73)">Add photos to keep
                the stoke alive!</label>
            </div>
            <div class="col">
              <button type="click" class="btn button-72 text-white" id="add-future-trip-photo-btn">Upload
                Photos</button>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="future-trip-length" style="color:rgb(73, 73, 73)">How long do you want to go for?</label>
          <textarea class="form-input bg-light" id="future-trip-length" name="future-trip-length"
            placeholder="Duration of stay..."></textarea>
        </div>
        <div class="form-group">
          <label for="future-trip-date" style="color:rgb(73, 73, 73)">When do you want to go?</label>
          <textarea class="form-input bg-light" id="future-trip-date" name="future-trip-date"
            placeholder="Dates of Trip..."></textarea>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label style="color:494949" for="future-trip-hotel-check">Where are you going to stay?</label>
          <select class="form-control" id="future-trip-hotel-check">
            <option>Hotel</option>
            <option>Camping</option>
            <option>AirBnb</option>
            <option>VRBO</option>
            <option>Friends/Family</option>
            <option>CouchSurf</option>
            <option>Adventure Van</option>
          </select>
        </div>
        <div class="form-group">
          <label for="future-trip-desc" style="color:rgb(73, 73, 73)">Why this place? What activities do you
            like?</label>
          <textarea class="form-input bg-light" id="future-trip-desc" name="future-trip-desc"
            placeholder="Why go here?"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn button-72 text-white">Create Dream Stamp</button>
        </div>
      </div>
    </div>
  </form>
  </div>
</div>










<div class="container ">
<div class="row align-items-stretch justify-content-between" id="make">

  {{#each futureTrip as |futureTrips|}}
  <div class="col-md-4" id="fix">
    <div class="card h-100" style="width: 19rem;" id="user-drty-card-futureTrip">
      <img class="card-img-top" src="{{futureTrips.future_destination_photo_url}}" alt="Card image cap">
      <div class="card-body d-flex flex-column justify-content-between">
        <div style="display: flex; justify-content: center;">
          <h5 class="card-title"><a href="#" style="color: rgb(6, 3, 22);"
              id="user-drty-futureTrip-link">{{futureTrips.future_destination_name}}</a></h5>

        </div>
        <p class="card-text"><strong>Why Go? - </strong>{{futureTrips.whyGo_notes}}</p>
        <p class="card-text"><strong>When I'm going:</strong> {{futureTrips.when_toGo_notes}}</p>
        <p class="card-text"><strong>How Long I'm staying:</strong> {{futureTrips.howLong_notes}}</p>
        <p class="card-text"><strong>Lodging:</strong> {{futureTrips.stay_in_hotel}}</p>
        <div style="display: flex; justify-content: space-between;">
          <div style="">
            
              <img class="" style="width:10%" data-id={{futureTrips.id}} src="/images/trash.png" alt="">
            
         
            {{!-- <img type="button" class="" style="width:10%" data-bs-toggle="modal"
              data-bs-target="#updateModal" data-futureTrip-id={{futureTrips.id}} src="/images/pencil.png"> --}}
              
          
          </div>
        </div>
      </div>
    </div>
  </div>
